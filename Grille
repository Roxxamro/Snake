def game(n):
    L1=placer_pion_depart(n)
    q=0
    cox,coy=4,4
    while q!=10:
        A=mouvement(L1,cox,coy)
        print(A[0])
        cox=int(A[1])
        coy=int(A[2])
        q=q+1
    return L1
print(game(9))
